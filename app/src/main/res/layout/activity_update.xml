<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="#FFFFFF" >
        <TextView
            android:id="@+id/texthaladd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Laporan Maintenance"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="15dp"
        android:background="@drawable/gradient"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textnamasite"
                android:text="Nama Site  : "
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/namasite_input2"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:background="@drawable/border"
                android:textSize="14sp"
                android:inputType="date"
                android:enabled="false" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textpelaksana"
                android:text="Pelaksana Kegiatan  : "
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/pelaksana_input2"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:background="@drawable/border"
                android:textSize="14sp"
                android:inputType="date"
                android:enabled="false" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textjenis"
                android:text="Jenis Pemeliharaan  : "
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/jenis_input2"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:background="@drawable/border"
                android:textSize="14sp"
                android:inputType="date"
                android:enabled="false" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/texttgl"
                android:textSize="14sp"
                android:text="Tanggal Pelaksanaan   : "
                android:textColor="#fff"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/tglawal_input2"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:background="@drawable/border"
                android:hint="awal kegiatan"
                android:textSize="14sp"
                android:inputType="date"
                android:enabled="false"
                android:textAlignment="center" />
            <Button
                android:id="@+id/date_awal"
                android:layout_width="25dp"
                android:padding="0dp"
                android:layout_height="25dp"
                style="?android:attr/borderlessButtonStyle"
                android:drawableLeft="@drawable/ic_date"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="  s/d  "
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/tglakhir_input2"
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:background="@drawable/border"
                android:hint="akhir kegiatan"
                android:textSize="14sp"
                android:inputType="date"
                android:enabled="false"
                android:textAlignment="center" />
            <Button
                android:id="@+id/date_akhir"
                android:layout_width="25dp"
                android:padding="0dp"
                android:layout_height="25dp"
                style="?android:attr/borderlessButtonStyle"
                android:drawableLeft="@drawable/ic_date"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textteknisi"
                android:textSize="14sp"
                android:text="Nama Teknisi  : "
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/teknisi_input2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/border"
                android:hint="Nama Teknisi"
                android:textSize="14sp"
                android:inputType="text"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textdes"
                android:textSize="14sp"
                android:text="Deskripsi  : "
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/deskripsi_input2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:verticalScrollbarPosition="right"
                android:inputType="text"
                android:textAlignment= "gravity"
                android:textSize="14sp"
                android:padding="5dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textkes"
                android:textSize="14sp"
                android:text="Kesimpulan  : "
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/kesimpulan_input2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:hint="Kesimpulan"
                android:inputType="text"
                android:textSize="14sp"
                android:padding="5dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textsaran"
                android:textSize="14sp"
                android:text="Saran  : "
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/saran_input2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:hint="Saran"
                android:inputType="text"
                android:textSize="14sp"
                android:padding="5dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/update_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:padding="4dp"
                android:text="Ubah"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:layout_marginRight="30dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:padding="4dp"
                android:text="Hapus"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>